<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OtpFragment">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/verification_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Verification Code"
        android:textSize="18dp"
        android:textColor="#A9A9A9"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="108dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mobi_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please type the verification code sent to"
        android:textSize="14sp"
        android:textColor="#A9A9A9"
        app:layout_constraintTop_toBottomOf="@+id/verification_text"
        android:layout_marginTop="16dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mobile_number_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="+91 9953631161"
        android:textSize="14sp"
        android:textColor="#A9A9A9"
        app:layout_constraintTop_toBottomOf="@+id/mobi_text"
        />


    <LinearLayout
        android:id="@+id/otp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mobile_number_text">

        <EditText
            android:id="@+id/et1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/app_orange"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            tools:ignore="LabelFor,NestedWeights" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/app_orange"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            tools:ignore="LabelFor,NestedWeights" />

        <EditText
            android:id="@+id/et3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/app_orange"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            tools:ignore="LabelFor,NestedWeights" />

        <EditText
            android:id="@+id/et4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/app_orange"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            tools:ignore="LabelFor,NestedWeights" />

        <EditText
            android:id="@+id/et5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/app_orange"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            tools:ignore="LabelFor,NestedWeights" />

        <EditText
            android:id="@+id/et6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/app_orange"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            tools:ignore="LabelFor,NestedWeights" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/resend_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend Code?"
        android:textSize="16sp"
        android:textColor="@color/app_orange"
        app:layout_constraintTop_toBottomOf="@id/otp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="36dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/validate_btn"
        style="@style/MaterialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Validate"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:layout_marginHorizontal="22dp"
        app:layout_constraintTop_toBottomOf="@id/resend_code"
        android:layout_marginTop="28dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>