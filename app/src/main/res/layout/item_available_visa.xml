<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp"
    android:layout_marginVertical="6dp"
    android:id="@+id/item_card_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/visa_image_view"
            android:layout_width="190dp"
            android:layout_height="240dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/visa_Type"
            android:text="Visa Type"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="14dp"
            app:layout_constraintStart_toEndOf="@id/visa_image_view"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/continent"
            android:text="Continent"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/visa_image_view"
            app:layout_constraintTop_toBottomOf="@id/visa_Type"
            android:layout_marginHorizontal="14dp"
            android:drawableLeft="@drawable/ic_location_24"
            android:drawableTint="@color/app_orange"
            android:layout_marginTop="14dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currency"
            android:text="Currency"
            app:layout_constraintTop_toBottomOf="@id/continent"
            android:drawableLeft="@drawable/ic_currency_money"
            android:drawableTint="@color/app_orange"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/visa_image_view"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="14dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/validity"
            android:text="Month Validity"
            app:layout_constraintTop_toBottomOf="@id/currency"
            android:drawableLeft="@drawable/ic_calendar_24"
            android:drawableTint="@color/app_orange"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/visa_image_view"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="14dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/processing_time"
            android:text="Processing Time"
            app:layout_constraintStart_toEndOf="@id/visa_image_view"
            app:layout_constraintTop_toBottomOf="@+id/validity"
            android:drawableLeft="@drawable/ic_timer_24"
            android:drawableTint="@color/app_orange"
            android:textSize="16sp"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="14dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>